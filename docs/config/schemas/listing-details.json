{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/PrinceMerluza/purecloud-partner-listing-management/config/schemas/listing-details.json",
    "title": "Listing Details",
    "description": "Core details of an app listing.",
    "type": "object",
    "properties": {
        "name": {
            "description":"Name of the app listing.",
            "type":"string",
            "maxLength":20
        },
        "platforms": {
            "description":"Platforms supported by the app.",
            "type":"array",
            "minItems":1,
            "items": {
                "type":"string",
                "enum": ["purecloud","pureconnect.premise","pureconnect.cloud","pureengage.premise","pureengage.cloud"]
            }
        },
        "vendorName": {
            "description": "Name of the vendor of the app.",
            "type":"string"
        },
        "vendorWebsite": {
            "description": "Website of the vendor.",
            "type":"string",
            "format": "uri"
        },
        "vendorEmail": {
            "description": "Email of the vendor.",
            "type":"string",
            "format": "email"
        },
        "tagLine": {
            "description": "App Listing Tag Line.",
            "type":"string",
            "maxLength": 100
        },
        "shortDescription": {
            "description": "Short description of the app.",
            "type":"string",
            "maxLength": 250
        },
        "longDescription": {
            "description": "Complete description of the app.",
            "type":"string",
            "maxLength": 2500
        },
        "videoURL": {
            "description": "Website of the vendor.",
            "anyOf": [
                {
                    "type":"string",
                    "format": "uri"
                },
                {
                    "type":"string",
                    "maxLength": 0
                }
            ]
        },
        "helpDocumentation": {
            "description": "Documentation URI of help documents.",
            "anyOf": [
                {
                    "type":"string",
                    "format": "uri"
                },
                {
                    "type":"string",
                    "maxLength": 0
                }
            ]
        },
        "appLanguages": {
            "description": "Languages supported by the app.",
            "type":"array",
            "minItems":1,
            "items": {
                "type":"string",
                "enum": ["English", "Dutch", "Spanish", "Chinese", "French Canadian", "French", "Australian English", "UK English", "Hebrew", "Hungarian", "Mexican Spanish", "Norwegian", "Romanian", "Swedish", "Portuguese", "Danish", "New Zealand English", "Euro English"]
            }
        },
        "industries": {
            "description": "Industries of the app.",
            "type":"array",
            "minItems":1,
            "items": {
                "type":"string",
                "enum": ["healthcare","retail","telco","hospitality","airlines","automotive","high tech","banking"]
            }
        },
        "licensingClassifications": {
            "description": "Licensing classifications of the app .",
            "type":"array",
            "minItems":1,
            "items": {
                "type":"string",
                "enum": ["SIP EP Connector","Agent Connector","Telco","3rd Party Media","Advanced Integration","IVR Connector","Enterprise","WFM Connector", "Wallboard Connector","Recording Connector"]
            }
        },
        "sellingParty": {
            "description": "Selling party of the app .",
            "type":"string",
            "enum": ["Genesys AppFoundry","Genesys Reseller","AppFoundry Vendor","Genesys Professional Services"]
        },
        "attestations": {
            "description": "Licensing classifications of the app .",
            "type":"array",
            "minItems":1,
            "items": {
                "type":"string",
                "enum": ["HIPPA","GDPR","PCI","SOC 2","HITRUST","ISO 27001","FedRAMP"]
            }
        },
    }
}